set nocompatible
colorscheme ron
set t_Co=256

filetype indent plugin on

set ignorecase
set smartcase
set autoindent
set number
set clipboard=unnamed
syntax on
set backspace=indent,eol,start
set nostartofline
set ruler
set cursorline
hi CursorLine term=bold cterm=bold guibg=Grey40 ctermbg=234 ctermfg=NONE

set shiftwidth=4
set softtabstop=4
set expandtab
set visualbell
set mouse=a
